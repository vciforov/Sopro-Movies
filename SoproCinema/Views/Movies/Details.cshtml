@model Movie

@{
    ViewData["Title"] = "Movie Details";
}
<div class="d-flex p-2 justify-content-center">

    <div class="card">
        <img class="card-img-top" style="width: 100%; height: 500px" src="/movie1.jpg" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title">@Model.MovieName</h2>
            <h6 class="card-text">Release Date: @Model.ReleaseDate.ToString("dd MMM yyyy")</h6>
            <h6 class="card-text">Genre:  
           
            @foreach (var gen in Model.MovieGenres)
            {
                <p style="display: inline"> @gen.Genre.GenreName |</p>

            }
            </h6>
            
            <h6 class="card-text">Cast: |  
            @foreach (var prs in Model.PersonMovieRoles)
            {
                <p class="card-text" style="display: inline"> @prs.Person.PersonName @prs.Person.PersonLastName - @prs.Role.RoleName |</p>

            }
            </h6>
            <h6 class="card-text">Description: @Model.Description</h6>
            <h6 class="card-text">Movie Length: @Model.Length</h6>
            <h6 class="card-text">Rating: @Model.MovieRatings</h6>
            <h6>IMDB:<a href="@Model.ImdbLink"> @Model.ImdbLink</a></h6>

        </div>
        <div class="card-footer">

            <a class="btn btn-primary float-left" asp-action="Index">Back</a>
        </div>

    </div>
</div>
