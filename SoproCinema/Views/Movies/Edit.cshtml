@model SoproCinema.ViewModels.EditMovieVm

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="row">
    <div class="col-md-8 offset-4">
        <form asp-action="Edit" class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieName" class="control-label"></label>
                <input asp-for="MovieName" class="form-control" />
                <span asp-validation-for="MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreIds" class="control-label"></label>
                <select asp-for="GenreIds" class="form-control" asp-items="ViewBag.Genres" multiple></select>
                <span asp-validation-for="GenreIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActorsIds" class="control-label"></label>
                <select asp-for="ActorsIds" class="form-control" asp-items="ViewBag.Persons" multiple></select>
                <span asp-validation-for="ActorsIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirectorsIds" class="control-label"></label>
                <select asp-for="DirectorsIds" class="form-control" asp-items="ViewBag.Persons" multiple></select>
                <span asp-validation-for="DirectorsIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProducersIds" class="control-label"></label>
                <select asp-for="ProducersIds" class="form-control" asp-items="ViewBag.Persons" multiple></select>
                <span asp-validation-for="ProducersIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" type="date" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieRatings" class="control-label"></label>
                <input asp-for="MovieRatings" class="form-control" />
                <span asp-validation-for="MovieRatings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImdbLink" class="control-label"></label>
                <input asp-for="ImdbLink" class="form-control" />
                <span asp-validation-for="ImdbLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary float-right" />
                <a class="btn btn-info" asp-action="Index">Back</a>
            </div>
        </form>

    </div>
</div>